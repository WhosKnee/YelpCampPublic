<% include ./partials/headerField %>
        
        <div class="container">
            <!--Note that if error is undefined the first condition is good
                but if error is empty it's still truthy-->
            <% if(error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
            <% } %>
            <% if(success && success.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
            <% } %>
        </div>
        

<div class="login">
    <h1>Log into YelpCamp</h1>
    <form action="/login" method="post">
        <input class="field block" type="text" name="username" placeholder="Username">
        <input class="field block" type="password" name="password" placeholder="Password">
        <button class="btn btn-sm btn-success">Login</button>
    </form>
</div>
